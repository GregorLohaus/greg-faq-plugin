{% block greg_faqdetail %}
    <sw-page class="greg-faqdetail">
        <template slot="smart-bar-actions">
            <sw-button-process
                :isLoading="isLoading"
                :processSuccess="processSuccess"
                variant ="primary"
                @process-finish ="saveFinish"
                @click="onClickSave">
                SAVE
            </sw-button-process>
        </template>
        <template slot="content">
            <sw-card-view>
                <sw-card v-if="faq" :isLoading="isLoading">
                    <sw-field v-model="faq.question" label="Question"></sw-field>
                    <sw-field v-model="faq.answer" label="Answer" ></sw-field>
                    <sw-entity-many-to-many-select
                        :localMode="faq.isNew()"
                        v-model="faq.products"
                        label="Products">
                    </sw-entity-many-to-many-select>
                </sw-card>
                <!--
                <sw-card v-if="myDebugVar == 1">
                    FAQ DETAIL SET DEBUGVAR
                </sw-card>
                <sw-card v-if="myDebugVar == 2">
                    FAQ CREATE OVERRIDE SET DEBUGVAR
                </sw-card>
                -->
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}
